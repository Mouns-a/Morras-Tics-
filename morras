<body>
    <h1>ðŸŒ¸ Morras Tics ðŸŒ¸</h1>
    <div class="container">
        <h2>Sube tu contenido</h2>
        <textarea id="newPost" placeholder="Escribe un artÃ­culo, aviso o noticia..."></textarea>
        <input type="file" id="imageUpload" accept="image/*">
        <button onclick="addPost()">Publicar</button>
        
        <div id="posts"></div>
    </div>
    
    <script>
        function addPost() {
            let postText = document.getElementById("newPost").value;
            let imageFile = document.getElementById("imageUpload").files[0];
            
            if (postText.trim() === "" && !imageFile) return;
            
            let postDiv = document.createElement("div");
            postDiv.classList.add("post");
            postDiv.innerHTML = `<p>${postText}</p>`;
            
            if (imageFile) {
                let img = document.createElement("img");
                img.src = URL.createObjectURL(imageFile);
                img.style.maxWidth = "100%";
                img.style.borderRadius = "10px";
                postDiv.appendChild(img);
            }
            
            document.getElementById("posts").appendChild(postDiv);
            document.getElementById("newPost").value = "";
            document.getElementById("imageUpload").value = "";
        }
    </script>
